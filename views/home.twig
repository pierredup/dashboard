{% extends "layouts/three_column.twig" %}

{% block sidebar_left %}
	<div class="well well-small">
		<legend>
			<h3>Projects</h3>
		</legend>
		
		<div class="pull-right">
			<a href="#add-project" data-toggle="modal"><i class="icon-plus-sign"></i> Add New</a>
		</div>
		
		<div class="modal hide" id="add-project">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">x</a>
				<h3>Add New Project</h3>
			</div>
			<div class="modal-body">
				<form>
					<div class="control-group">
						<label for="project-title">Title</label>
						<input type="text" class="required input-xlarge" name="project[title]" id="project-title" />
					</div>
					
					<div class="control-group">
						<label for="project-url">Url</label>
						<div class="input-prepend">
							<div class="add-on">http://</div>
							<input type="text" class="required" name="project[url]" id="project-url" />
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Close</a>
				<a href="#" class="btn btn-primary" id="save-project">Save</a>
			</div>
		</div>
		
		<br class="clearfix" />

		<ul class="nav nav-list" id="project-list">
			{% for project in projects %}
				<li>
					<div class="pull-right actions hide">
						<a href="#" rel="tooltip" title="Delete this project" class="delete-project"><i class="icon-trash"></i></a>
					</div>
					<a href="{{ project.url }}" rel="external" target="_blank">{{ project.title }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
	
	<div class="well well-small">
	
		<legend>
			<h3>Sites</h3>
		</legend>
		
		<div class="pull-right">
			<a href="#add-site" data-toggle="modal"><i class="icon-plus-sign"></i> Add New</a>
		</div>
		
		<div class="modal hide" id="add-site">
			<div class="modal-header">
				<a href="#" class="close" data-dismiss="modal">x</a>
				<h3>Add New Site</h3>
			</div>
			<div class="modal-body">
				<form>
					<div class="control-group">
						<label for="site-title">Title</label>
						<input type="text" class="required input-xlarge" name="site[title]" id="site-title" />
					</div>
					
					<div class="control-group">
						<label for="site-url">Url</label>
						<div class="input-prepend">
							<div class="add-on">http://</div>
							<input type="text" class="required" name="site[url]" id="site-url" />
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Close</a>
				<a href="#" class="btn btn-primary" id="save-site">Save</a>
			</div>
		</div>
		
		<br class="clearfix" />

		<ul class="nav nav-list" id="site-list">
			{% for site in sites %}
				<li>
					<div class="pull-right actions hide">
						<a href="#" rel="tooltip" title="Delete this site" class="delete-site"><i class="icon-trash"></i></a>
					</div>
					<a href="{{ site.url }}" rel="external" target="_blank">{{ site.title }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}

{% block content %}
	<div class="well well-small">
		<legend><h3>Bookmarks</h3></legend>
		Coming Soon!
	</div>
{% endblock %}

{% block sidebar_right %}
	<div class="well well-small">
		<legend><h3>Utilities</h3></legend>

		<ul class="nav nav-list">
			{% for util in app.utilities %}
				<li>
					<a href="{{ util.link }}"{% if util.attributes is defined %}{% for key, attr in util.attributes %} {{ key }}="{{ attr }}"{% endfor %}{% endif %}>{{ util.title }}</a>
					{% if util.hasModal %}
						{{ util.getModal(app)|raw }}
					{% endif %}
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock sidebar_right %}
